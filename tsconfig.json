{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es6"]
  },
  "include": ["src"],
  "compileOnSave": false,
  "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"]
  }
}
